{
  "manifest_version": 3,
  "name": "42 Cluster Time Tracker",
  "version": "3.0.0",
  "description": "Track 42 cluster time, calculate time needed to earn a star",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://matrix.42lyon.fr/*",
    "https://api.intra.42.fr/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://matrix.42lyon.fr/*"
      ],
      "js": [
        "injector.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content.js",
        "network-interceptor.js"
      ],
      "matches": [
        "https://matrix.42lyon.fr/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}